<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <EditText
        android:id="@+id/et_username_dialogChangePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:hint="Username" />

    <EditText
        android:id="@+id/et_password_dialogChangePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_username_dialogChangePass"
        android:layout_alignParentStart="true"
        android:inputType="textPassword"
        android:hint="Password" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password_dialogChangePass"
        android:hint="Nuovo Password"
        android:id="@+id/et_newPassword_dialogChangePass"/>


</RelativeLayout>